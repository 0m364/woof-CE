#!/bin/bash

# various wl functions
. /etc/rc.d/wl_func

TEMPFILE=/tmp/wl_idle

# TEMPFILE should exist because wl_monsleep creates it
[ -f $TEMPFILE ] || wlr-randr > $TEMPFILE
mons $TEMPFILE || exit_error 'failed finding monitor(s)'
pozi $TEMPFILE || exit_error 'failed finding monitor position'
POSITION=($POSITIONS)

x=0
for n in $(echo $MONITORS) ; do
	wlr-randr --output $n --pos ${POSITION[$x]} --on
	x=$(($x + 1))
done