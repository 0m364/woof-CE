download() {
    [ -f dwl-87fc3a58ab72ff6ff6eb6e1156ff208fcb9e3739.zip ] || wget -t 3 -T 60 -O dwl-87fc3a58ab72ff6ff6eb6e1156ff208fcb9e3739.zip https://github.com/djpohly/dwl/archive/87fc3a58ab72ff6ff6eb6e1156ff208fcb9e3739.zip
}

build() {
    unzip dwl-87fc3a58ab72ff6ff6eb6e1156ff208fcb9e3739.zip
    cd dwl-87fc3a58ab72ff6ff6eb6e1156ff208fcb9e3739
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}