download() {
    [ -f dwl-b04c73be3de62d2739b5bb85e40f0c9af1122903.zip ] || wget -t 3 -T 60 -O dwl-b04c73be3de62d2739b5bb85e40f0c9af1122903.zip https://github.com/djpohly/dwl/archive/b04c73be3de62d2739b5bb85e40f0c9af1122903.zip
}

build() {
    unzip dwl-b04c73be3de62d2739b5bb85e40f0c9af1122903.zip
    cd dwl-b04c73be3de62d2739b5bb85e40f0c9af1122903
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
    $CC $CFLAGS ../dwl-send.c $LDFLAGS -o /usr/bin/dwl-send
    $CC $CFLAGS ../dwl-status.c $LDFLAGS -o /usr/bin/dwl-status
}