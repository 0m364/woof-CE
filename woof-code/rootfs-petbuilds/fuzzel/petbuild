download() {
    [ -f fuzzel-1.7.0.tar.gz ] || wget -t 3 -T 60 -O fuzzel-1.7.0.tar.gz https://codeberg.org/dnkl/fuzzel/archive/1.7.0.tar.gz
}

build() {
    tar -xzf fuzzel-1.7.0.tar.gz
    cd fuzzel
    meson --buildtype=release --prefix=/usr -Dsvg-backend=librsvg build
    ninja -C build install
    rm -rf /usr/share/zsh
}
